<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfielActivity"
    android:background="@drawable/gradient"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="30dp">
        
        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="40dp">
            
            <ImageView
                android:id="@+id/profiel_foto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/pp"
                android:contentDescription="@string/todo">

            </ImageView>

            <TextView
                android:id="@+id/naam_naast_foto"
                android:layout_width="270dp"
                android:layout_height="80dp"
                android:layout_toEndOf="@id/profiel_foto"
                android:gravity="center"
                android:text="@string/gerrit_wijns"
                android:textSize="30sp"
                android:textStyle="bold">

            </TextView>

            <ProgressBar
                android:id="@+id/profiel_progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/profile_email"
                    android:contentDescription="@string/todo">
                </ImageView>

                <EditText
                    android:id="@+id/profiel_email"
                    tools:ignore="LabelFor"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:autofillHints=""
                    android:inputType="textEmailAddress"
                    android:paddingStart="20dp"
                    android:paddingEnd="15dp"
                    android:text="@string/e_mailadres"
                    android:textSize="20sp"></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/profile_password"
                    android:contentDescription="@string/todo">
                </ImageView>

                <EditText
                    android:id="@+id/profiel_wachtwoord"
                    tools:ignore="LabelFor"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:autofillHints=""
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:paddingEnd="15dp"
                    android:text="@string/wachtwoord"
                    android:textSize="20sp"></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/profile_telephone"
                    android:contentDescription="@string/todo">
                </ImageView>

                <EditText
                    android:id="@+id/profiel_telefoonnummer"
                    tools:ignore="LabelFor"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:autofillHints=""
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:paddingEnd="15dp"
                    android:text="@string/telefoon"
                    android:textSize="20sp"></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/profile_location"
                    android:contentDescription="@string/todo">
                </ImageView>

                <EditText
                    android:id="@+id/profiel_locatie"
                    tools:ignore="LabelFor"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:autofillHints=""
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:paddingEnd="15dp"
                    android:text="@string/locatie"
                    android:textSize="20sp"></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/profile_name"
                    android:contentDescription="@string/todo">
                </ImageView>

                <EditText
                    android:id="@+id/profiel_naam"
                    tools:ignore="LabelFor"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:autofillHints=""
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:paddingEnd="15dp"
                    android:text="@string/naam"
                    android:textSize="20sp"></EditText>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>