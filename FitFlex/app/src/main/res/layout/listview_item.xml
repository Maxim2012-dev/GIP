<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/listview_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/mijnWorkoutOefNaam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/hoeveelheidReps"
        android:textColor="@color/colorPrimary">

    </TextView>

    <TextView
        android:id="@+id/hoeveelheidReps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_toStartOf="@id/verwijder"
        android:textColor="@color/colorPrimary">

    </TextView>

    <ImageView
        android:id="@+id/verwijder"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="@string/verwijder"
        android:src="@drawable/ic_delete_black"
        android:layout_alignParentEnd="true">

    </ImageView>

</RelativeLayout>